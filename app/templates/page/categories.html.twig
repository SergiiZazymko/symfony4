{% extends 'base.html.twig' %}

{% block body %}
    <div class="list-group">
        <a href="{{ path('categories') }}" class="list-group-item list-group-item-action active">Categories</a>
        {% for category in categories %}
            <a href="{{ path('category', {'id' : category.id}) }}" class="list-group-item list-group-item-action">{{ category }}</a>
        {% endfor %}
    </div>
{% endblock %}
